<resources>

    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryVariant">@color/design_default_color_primary</item>
        <item name="colorOnBackground">@color/design_default_color_background</item>
        <item name="colorOnPrimary">@color/design_default_color_on_primary</item>
        <item name="android:actionButtonStyle">@style/Theme.MyApp.ActionBarStyle</item>
        <item name="colorControlHighlight">@color/design_default_color_primary</item>
    </style>

    <style name="Theme.MyApp.ActionBarStyle" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="android:textColor">@color/design_default_color_on_primary</item>
        <item name="iconTint">@color/design_default_color_on_primary</item>
    </style>

    <style name="Theme.MyApp.ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/design_default_color_on_primary</item>
    </style>
    
    <style name="Theme.MyApp.MyFloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="tint">?attr/colorOnBackground</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="datepicker" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/calColor</item>
        <item name="colorPrimaryDark">@color/calColor</item>
        <item name="colorAccent">@color/calColor</item>
    </style>

    <style name="Theme.MyApp.MyIconButton" parent="Widget.MaterialComponents.Button.TextButton.Icon" >
        <item name="android:layout_width">@android:dimen/app_icon_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="iconTint">@color/design_default_color_primary</item>
    </style>

    <style name="MyTagIconButton" parent="Theme.MyApp.MyIconButton" >
        <item name="iconTint">@color/tagColor</item>
        <item name="icon">@drawable/ic_tag_18px</item>
    </style>

    <style name="MyListIconButton" parent="Theme.MyApp.MyIconButton" >
        <item name="iconTint">@color/listColor</item>
        <item name="icon">@drawable/ic_list_18px</item>
    </style>

    <style name="MyPriorityIconButton" parent="Theme.MyApp.MyIconButton" >
        <item name="iconTint">@color/priorityColor</item>
        <item name="icon">@drawable/ic_priority_24px</item>
    </style>

    <style name="MyCalIconButton" parent="Theme.MyApp.MyIconButton" >
        <item name="iconTint">@color/calColor</item>
        <item name="icon">@drawable/ic_24px</item>
    </style>

    <style name="MyDescrIconButton" parent="Theme.MyApp.MyIconButton" >
        <item name="icon">@drawable/ic_description_24</item>
    </style>

    <style name="MyRemoveIconButton" parent="Widget.MaterialComponents.Button.TextButton.Icon" >
        <item name="android:layout_width">@android:dimen/app_icon_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="icon">@drawable/ic_outline_delete_outline_24px</item>
        <item name="iconTint">@color/design_default_color_on_primary</item>
        <item name="android:textColor">@color/design_default_color_on_primary</item>

    </style>

    <style name="MyChipApperance" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/design_default_color_primary</item>
        <item name="android:textColor">@color/design_default_color_on_primary</item>
    </style>

    <style name="ChipTextApperance" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textColor">@color/design_default_color_on_primary</item>
        <item name="android:textSize">12dp</item>
        <item name="android:backgroundTint">@color/design_default_color_primary</item>
    </style>


    <style name="MyTagChip" parent="ChipTextApperance" >
        <item name="iconTint">@color/tagColor</item>
    </style>

    <style name="MyListChip" parent="ChipTextApperance" >
        <item name="iconTint">@color/listColor</item>
    </style>

    <style name="MyPriorityChip" parent="ChipTextApperance" >
        <item name="iconTint">@color/priorityColor</item>
    </style>

    <style name="MyCalChip" parent="ChipTextApperance" >
        <item name="iconTint">@color/calColor</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/design_default_color_on_primary</item>
    </style>
    <style name="ToolbarColoredBackArrow" parent="Theme.MyApp">
        <item name="android:textColorSecondary">@color/design_default_color_on_primary</item>
    </style>

    <style name="MyOutlinedTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/boxStrokeColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="hintTextColor">@color/hintColor</item>
    </style>

    <style name="MyOutlinedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/boxStrokeColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="hintTextColor">@color/hintColor</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>



</resources>
