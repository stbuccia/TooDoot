<resources>

    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryVariant">@color/design_default_color_primary_variant</item>
        <item name="colorOnBackground">@color/design_default_color_background</item>
        <item name="colorOnPrimary">@color/design_default_color_on_primary</item>
        <item name="android:textColorPrimary">@color/design_default_color_on_primary</item>

    </style>
    
    <style name="Widget.MyApp.MyFloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="tint">?attr/colorOnBackground</item>
    </style>




</resources>
